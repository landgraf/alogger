project alogger_libs_build is 
	Library_Name :=  "alogger";

    for Source_Dirs use ("../src", "../src/generic", "../src/configfile");
    for Object_Dir use "../obj";
    for Library_Dir use "../lib";
    for Languages use ("Ada");
    for Library_Kind use "relocatable";
    for Library_Name use "alogger";
    for Library_Version use "lib" & Library_Name & ".so." & "0.1";
        -- for Externally_Built use "True";

end alogger_libs_build;
